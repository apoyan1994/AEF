<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aef.edu.aef">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".aef.AefApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon_cool"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true">
        </uses-feature>

        <activity
            android:name=".aef.AefMainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".content_activities.AefContentActivity"/>
        <activity android:name=".handlers.SubCategoryChooser"/>
        <activity android:name=".handlers.MainCategoryChooser"/>
        <activity android:name=".content_activities.AefContentActivityWithMap"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB6eyqMD5GBVs8I_i0EP87o5s5ttVRYvkI"/>

    </application>

</manifest>